@model List<Expence_Managment_Core_WebApplication.Models.Users>

	<h2>User List</h2>
<a asp-action="Logout" asp-controller="LoginController1" class="btn btn-danger float-end">Logout</a>
<a class="btn btn-primary" asp-controller="User" asp-action="AddUser">Add USers</a>
<table class="table table-bordered">
		<thead>
			<tr>
				<th>User Id</th>
				<th>User Name</th>
				<th>Email</th>
				<th>Created At</th>
		</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.UserID</td>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>@user.CreatedAt</td>
					<td>
					<a class="btn btn-primary" asp-controller="User" asp-action="Details" asp-route-id="@user.UserID">Edit</a>
					<form method="post" asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.UserID" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
					</td>
				</tr>
		}
		</tbody>
	</table>